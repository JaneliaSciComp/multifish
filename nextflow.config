includeConfig 'external-modules/spark/nextflow.config'

profiles {

    lsf {
        process {
            executor = 'lsf'

            clusterOptions = params.lsf_opts

            withLabel: withGPU {
                queue = 'gpu_any'
                clusterOptions = '-gpu "num=1" ' + params.lsf_opts
            }
        }

        docker {
            enabled = false
        }

        singularity {
            enabled = true
        }
    }

}
